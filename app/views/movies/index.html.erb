<h1>Rotten Mangoes</h1>
<%= link_to 'Submit a movie!', new_movie_path %>
<hr>

<%= form_tag movies_path, method: :get do %>
  <div>
    <%= text_field_tag :search_term, params[:search_term]  %>
  </div>
  <div>
    <%= label_tag :runtime_in_minutes %><br>
    <%= select_tag :runtime_in_minutes, options_for_select(
      [
        ['', ''],
        ['Under 90 minutes', 'less_than_90'],
        ['Between 90 and 120 minutes', 'between_90_and_120'],
        ['Over 120 minutes', 'greater_than_120']
      ],
      params[:runtime_in_minutes]
    )%>
  </div>
  <div>
    <%= submit_tag 'Search' %>
  </div>
<% end %>

<hr>

<% @movies.each do |movie| %>
  <%= render 'movie', movie: movie %>
<% end %>