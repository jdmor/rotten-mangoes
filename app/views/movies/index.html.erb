<h1>Rotten Mangoes</h1>
<%= link_to 'Submit a movie!', new_movie_path %>
<hr>

<%= form_tag movies_path, method: :get do %>
  <div>
    <%= label_tag :title %><br>
    <%= text_field_tag :title, params[:title]  %>
  </div>
  <div>
    <%= label_tag :director %><br>
    <%= text_field_tag :director, params[:director]  %>
  </div>
  <div>
    <%= label_tag :runtime_in_minutes %><br>
    <%= select_tag :runtime_in_minutes, options_for_select(
      [
        ['', ''],
        ['Under 90 minutes', 'less_than_90'],
        ['Between 90 and 120 minutes', 'between_90_and_120'],
        ['Over 120 minutes', 'greater_than_120']
      ],
      params[:runtime_in_minutes]
    )%>
  </div>
  <div>
    <%= submit_tag 'Search' %>
  </div>
<% end %>

<hr>
<% @movies.each do |movie| %>
  <%= link_to image_tag(movie.poster_image.thumb), movie_path(movie) %>
  <h2><%= link_to movie.title, movie_path(movie) %></h2>
  <h3><%= formatted_date(movie.release_date) %></h3>
  <h4>Dir. <%= movie.director %> | <%= movie.runtime_in_minutes %> minutes</h4>
  <p><%= movie.description %></p>
  <p><%= movie.review_average %>/10</p>
  <hr>
<% end %>
