<header>

  <ul id="main-menu-dropdown" class="dropdown-content">
    <%= render '/layouts/log_in_sign_up' %>
    <li><%= link_to 'Submit movie', new_movie_path %></li>
    <%= render '/layouts/manage_users' %>
    <%= render '/layouts/log_out'%>
  </ul>

  <nav>
    <div class="nav-wrapper">

      <div class='container'>
        <%= link_to 'RM', root_path, class: 'brand-logo' %>
        <ul class="right nav-options">

          <li class='hide-on-med-and-down search-wrapper-desktop'>
            <%= form_tag movies_path, method: :get, class: 'row' do %>
                <div class="file-field input-field card col">
                  <%= button_tag '', class: 'btn material-icons' do %>
                    <span><i class="material-icons">search</i></span>
                  <% end %>
                  <div class='file-path-wrapper'>
                    <%= text_field_tag :search_term, params[:search_term], class: 'file-path', placeholder: 'Search by title and director' %>
                  </div>
                </div>

                <div class='input-field col'>
                  <%= select_tag :runtime_in_minutes,
                  options_for_select([
                    ['Filter by length', ''],
                    ['Under 90 mins', 'less_than_90'],
                    ['Between 90 and 120 mins', 'between_90_and_120'],
                    ['Over 120 mins', 'greater_than_120']],
                    params[:runtime_in_minutes])
                    %>
                  </div>
              <% end %>
          </li>

          <li><a id='show-search' class='hide-on-large-only'>Search
            <i class="material-icons right">search</i>
            <i class='mdi-content-clear right is-transparent'></i>
          </a></li>
          <li><a class="dropdown-button" data-beloworigin="true" data-constrainwidth="false" href="#!" data-activates="main-menu-dropdown">Menu<i class="material-icons right">menu</i></a></li>
        </ul>
      </div>

      <div class='container' id='search-box' style='display: none;'>
        <div class="row search-wrapper">
          <%= form_tag movies_path, method: :get, class: 'col s12' do %>
            <div class='row'>
              <div class="file-field input-field card">
                <%= button_tag '', class: 'btn material-icons' do %>
                  <span><i class="material-icons">search</i></span>
                <% end %>
                <div class='file-path-wrapper'>
                  <%= text_field_tag :search_term, params[:search_term], class: 'file-path', placeholder: 'Search by title and director' %>
                </div>
              </div>
            </div>

            <div class='row'>
              <div class='input-field col s12'>
                <%= select_tag :runtime_in_minutes,
                options_for_select([
                  ['Filter by length', ''],
                  ['Under 90 mins', 'less_than_90'],
                  ['Between 90 and 120 mins', 'between_90_and_120'],
                  ['Over 120 mins', 'greater_than_120']],
                  params[:runtime_in_minutes])
                  %>
                </div>
              </div>
            <% end %>
          </div>
      </div>
    </div>
  </nav>
</header>